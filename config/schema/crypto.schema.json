{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Crypto Config",
  "description": "密码相关配置",
  "type": "object",
  "properties": {
    "hash": {
      "description": "HASH 相关设置",
      "type": "object",
      "properties": {
        "algorithm": {
          "description": "哈希算法",
          "type": "string",
          "anyOf": [
            {
              "pattern": "^(md5|MD5|sha1|SHA1|shake_(128|256)|sm3|SM3)$"
            },
            {
              "pattern": "^(sha(3_)?|SHA)(224|256|384|512)$"
            },
            {
              "pattern": "^blake2(b(256)?|s(512)?)$"
            }
          ],
          "default": "sha3_512"
        }
      }
    },
    "hmac": {
      "description": "HMAC 相关设置",
      "type": "object",
      "properties": {
        "key": {
          "description": "HMAC key，为空则读取部分硬件信息并hash作为key",
          "type": "string",
          "default": ""
        },
        "save_key": {
          "description": "是否将key保存至文件，仅key值为空有效",
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
