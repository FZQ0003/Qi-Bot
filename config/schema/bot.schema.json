{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Bot Config",
  "description": "机器人配置",
  "type": "object",
  "properties": {
    "dry_run": {
      "description": "试运行，使用终端作为聊天界面",
      "type": "boolean",
      "default": false
    },
    "modules": {
      "description": "Saya 模块",
      "anyOf": [
        {
          "const": "*"
        },
        {
          "const": null
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\w+(\\.\\w+)*$"
          }
        }
      ],
      "default": "*"
    },
    "protocols": {
      "$ref": "protocol.schema.json"
    },
    "file": {
      "$ref": "file.schema.json"
    },
    "server": {
      "$ref": "web.schema.json"
    },
    "crypto": {
      "$ref": "crypto.schema.json"
    }
  }
}
