{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Bot Protocol Config",
  "description": "机器人协议配置",
  "$defs": {
    "qq": {
      "type": "integer",
      "minimum": 10000,
      "maximum": 9999999999
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "anyOf": [
      {
        "properties": {
          "id": {
            "const": "console"
          }
        }
      },
      {
        "properties": {
          "id": {
            "const": "mirai_api_http"
          },
          "host": {
            "description": "HTTP API 服务运行的地址",
            "type": "string",
            "pattern": "^(xn--[a-zA-Z\\d]+|[+\\w~]+)(.(xn--[a-zA-Z\\d]+|[+\\w~]+))*$",
            "default": "localhost"
          },
          "port": {
            "description": "HTTP API 服务运行的端口",
            "type": "integer",
            "minimum": 1,
            "maximum": 65535,
            "default": 8080
          },
          "account": {
            "description": "机器人 QQ",
            "anyOf": [
              {
                "$ref": "#/$defs/qq"
              },
              {
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "#/$defs/qq"
                }
              }
            ],
            "default": 1234567890
          },
          "access_token": {
            "description": "HTTP API verifyKey",
            "type": "string",
            "default": "ServiceVerifyKey"
          }
        },
        "required": [
          "host",
          "port",
          "account"
        ]
      }
    ]
  }
}
